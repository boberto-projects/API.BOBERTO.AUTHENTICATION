#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["API.BOBERTO.AUTHENTICATION.WEB/API.BOBERTO.AUTHENTICATION.WEB.csproj", "API.BOBERTO.AUTHENTICATION.WEB/"]
COPY ["API.BOBERTO.AUTHENTICATION.APPLICATION.MESSAGES/API.BOBERTO.AUTHENTICATION.APPLICATION.MESSAGES.csproj", "API.BOBERTO.AUTHENTICATION.APPLICATION.MESSAGES/"]
COPY ["API.BOBERTO.AUTHENTICATION.APPLICATION/API.BOBERTO.AUTHENTICATION.APPLICATION.csproj", "API.BOBERTO.AUTHENTICATION.APPLICATION/"]
COPY ["API.BOBERTO.AUTHENTICATION.DOMAIN/API.BOBERTO.AUTHENTICATION.DOMAIN.csproj", "API.BOBERTO.AUTHENTICATION.DOMAIN/"]
RUN dotnet restore "API.BOBERTO.AUTHENTICATION.WEB/API.BOBERTO.AUTHENTICATION.WEB.csproj"
COPY . .
WORKDIR "/src/API.BOBERTO.AUTHENTICATION.WEB"
RUN dotnet build "API.BOBERTO.AUTHENTICATION.WEB.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "API.BOBERTO.AUTHENTICATION.WEB.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "API.BOBERTO.AUTHENTICATION.WEB.dll"]